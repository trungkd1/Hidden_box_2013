<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.32"
        android:orientation="horizontal"
        android:paddingBottom="30dp" 
        android:paddingTop="10dp">

        <View
            android:id="@+id/left_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
           	android:visibility="gone"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textbox"
            android:padding="5dp" >

            <EditText
                android:id="@+id/edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:padding="0dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_aris" />

            <TextView
                android:id="@+id/notice"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gray" />

        </FrameLayout>

        <View
            android:id="@+id/right_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:id="@+id/keyboard_empty_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/border"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/key_button_1"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="1"
                android:text="1" />

            <Button
                android:id="@+id/key_button_2"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="2"
                android:fontFamily=""
                android:text="2" />

            <Button
                android:id="@+id/key_button_3"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="3"
                android:text="3" />

            <Button
                android:id="@+id/key_button_4"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="4"
                android:text="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/key_button_5"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="5"
                android:text="5" />

            <Button
                android:id="@+id/key_button_6"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="6"
                android:text="6" />

            <Button
                android:id="@+id/key_button_7"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="7"
                android:text="7" />

            <Button
                android:id="@+id/key_button_8"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="8"
                android:text="8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/key_button_9"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="9"
                android:text="9" />

            <Button
                android:id="@+id/key_button_0"
                style="@style/KeyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:onClick="onClickKey"
                android:tag="0"
                android:text="0" />

            <Button
                android:id="@+id/key_button_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/key_clear_bg"
                android:onClick="onClickKey"
                android:tag="-1" />

            <Button
                android:id="@+id/key_button_go"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/key_go_bg"
                android:onClick="onClickKey"
                android:tag="-2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>